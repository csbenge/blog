<% unless comment.archived? %>

  <% if comment.user_id %>
    <tr>
      <td><%= comment.id %></td>
      <td><%= getCommentUserName(comment.user_id) %></td>
      <td><%= comment.body %></td>
      <td><%= comment.status %></td>
      <td><%= comment.created_at.strftime("%Y-%m-%d: %H:%M:%S") %></td>
      <td>
        <% if comment.user_id == current_user.id %>
          <%= link_to "Delete", [comment.article, comment], data: {
              turbo_method: :delete,
              turbo_confirm: "Delete Comment?"
            }, :class => "btn btn-primary btn-sm" %>
        <% end %>
      </td>
    </tr>
  <% end %>

<% end %>
