<div class="container text-center">
  <div class="row">
    <div class="col col-3"></div>

    <div class="col col-6">

        <div class="card text-bg-secondary">
        <h3 class="card-header">Update Your Profile</h3>
        <div class="card-body">
            <div class="container text-start">
            <p class="card-text">

            <div class="row">
              <div class="col">
                <%= form_for(@user) do |f| %>
                  <%= f.label :name, :class => "form-label" %>
                  <%= f.text_field :name, :class => "form-control" %>
                  <% @user.errors.full_messages_for(:name).each do |message| %>
                    <div class="bg-danger-subtle"><%= message %></div>
                  <% end %>

                  <br>
                  <%= f.label :email, :class => "form-label" %>
                  <%= f.email_field :email, :class => "form-control" %>
                  <% @user.errors.full_messages_for(:email).each do |message| %>
                    <div class="bg-danger-subtle"><%= message %></div>
                  <% end %>

                  <br>
                  <%= f.label :password, :class => "form-label" %>
                  <%= f.password_field :password, :class => "form-control" %>
                  <% @user.errors.full_messages_for(:password).each do |message| %>
                    <div class="bg-danger-subtle"><%= message %></div>
                  <% end %>

                  <br>
                  <%= f.label :password_confirmation, "Confirmation", :class => "form-label" %>
                  <%= f.password_field :password_confirmation, :class => "form-control" %>
                  <% @user.errors.full_messages_for(:password_confirmation).each do |message| %>
                    <div class="bg-danger-subtle"><%= message %></div>
                  <% end %>

                  <br>
                  <%= f.submit "Save Changes", class: "btn btn-primary btn-sm" %>
                <% end %>
              </div>
            </div>
             
                
            </p>
            </div>
            </div>
        </div>

    </div>
    <div class="col col-3"></div>
  </div>
</div>
